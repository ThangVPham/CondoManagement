<div style='color:white;'>
    <h1>Announcement</h1>
    <% if(displayName) { %>
    <a href='/announcement/add'><button type="button" class="btn btn-primary" style="width: 150px;margin: 20px 0px;"><i class="fas fa-plus" style="margin:5px;"></i>New Memo</button></a>
    <%}%>
    <div>
        <% for(let i=announcement.length-1; i>=0; i--){%>
          
       <h4><%= i+1 +". "%><%= announcement[i].title%></h4>
        <p><%= announcement[i].content%></p>
        <p>Date: <%= announcement[i].date.toLocaleString()%></p>
        <% if(displayName) { %>
        <a href="/announcement/edit/<%= announcement[i]._id%>" class="btn btn-primary btn-sm edit">Edit</a>
        <a href="/announcement/delete/<%= announcement[i]._id%>" class="btn btn-danger btn-sm danger">Delete</a>
        <%}%>
        <%} %>
    </div>
</div>
